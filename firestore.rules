rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
     match /products/{id} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /users/{uid}/jobs/{jobId} {
      allow read, write: if request.auth.uid == uid;
    }
  }
}